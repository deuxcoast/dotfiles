[user]
	    name = duexcoast
	    email = conor.ux@gmail.com

[init]
	    defautlBranch = main
	    defaultBranch = main

[core]
        pager = delta --diff-so-fancy
        editor = nvim

[diff]
        colorMoved = default
        tool = nvimdiff
        renames = copy

[diftool]
        prompt = false
        tool = nvimdiff

[difftool "nvimdiff"]
        cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" \"wincmd L\"

[merge]
        tool = nvimdiff4
        prompt = false
        conflictStyle=diff3

[mergetool]
        prompt = false

[mergetool "nvimdiff4"]
        cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[filter "lfs"]
        required = true
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
	    process = git-lfs filter-process

[commit]
      	template = ~/.config/git/commit_template

[interactive]
        diffFilter = delta --color-only --features=interactive

[delta]
        ; features = zebra-dark 
        ; features =Monokai Extended 
        syntax-theme = Catppuccin-mocha
        minus-style = "#000000" "#F5C2E7"
        minus-emph-style = "#000000" "#f38ba8"
        plus-style = "#000000" "#b4befe"
        plus-emph-style = "#000000" "#89B4FA"
        map-styles = \
           bold purple => syntax "#feecf7", \
           bold blue => syntax "#e5dff6", \
           bold cyan => syntax "#d8fdf6", \
           bold yellow => syntax "#f4ffe0"
        zero-style = syntax
        whitespace-error-style = "#aaaaaa"

