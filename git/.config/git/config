[diff]
        tool = nvimdiff
        renames = copy

[diftool]
        prompt = false
        tool = nvimdiff

[difftool "nvimdiff"]
        cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" \"wincmd L\"

[merge]
        tool = nvimdiff4
        prompt = false
        conflictStyle=diff3

[mergetool]
        prompt = false

[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[filter "lfs"]
	      required = true
	      clean = git-lfs clean -- %f
	      smudge = git-lfs smudge -- %f
	      process = git-lfs filter-process

