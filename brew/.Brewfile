cask 'purevpn'

# programming languages & package managers
brew 'golang'
brew 'lua'
brew 'luarocks'
brew 'node'
brew 'nvm'
brew 'pnpm'
brew 'yarn'
brew 'rustup'
brew 'ruby'
brew 'pyenv'

