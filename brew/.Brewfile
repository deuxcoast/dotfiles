tap "jesseduffield/lazygit"

# cli tools
brew 'archey4'
brew 'atuin'
brew 'bat'
brew 'btop'
brew 'coreutils'
brew 'cppman'
brew 'eza'
brew 'fd'
brew 'fzf'
brew 'gh'
brew 'git-delta'
brew 'glow'
brew 'hey'
brew 'htop'
brew 'hub'
brew 'jq'
brew 'kubectl'
brew 'lazygit'
brew 'mongocli'
brew 'mosh'
brew 'most'
brew 'neovim'
brew 'osx-cpu-temp'
brew 'ripgrep'
brew 'rsync'
brew 'stow'
brew 'the_silver_searcher'
brew 'tldr'
brew 'tmux'
brew 'tmuxinator'
brew 'tree'
brew 'vivid'
brew 'wget'
brew 'zoxide'
brew 'zsh'
brew 'zzz'
brew 'koekeishiya/formulae/yabai'
